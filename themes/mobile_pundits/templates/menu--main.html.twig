      {% macro menu_links(items, attributes, menu_level) %}
        {% import _self as menus %}
        {% if items %}
          {% if menu_level == 0 %}
            <ul class="nav navbar-nav  pull-right main-nav">
          {% else %}
          <div class="main-drop-menu   dropdown-menu" aria-labelledby="dropdownMenu">
          <div class="row"> 
          <div class="col-xs-7">
            <div class="dropmenu-img">
                <img src="http://d2ae6i1c2fz1s5.cloudfront.net/sites/default/files/Menu%20image%20directory/cloud_menu_0.jpg" title="{{ items.field_main_menu_image }}">
            </div>
          </div>
          <div class="col-xs-5 no-padding">
           <ul> 
          {% endif %}
          {% for item in items %}
            {% if item.below %}
              {% if menu_level == 0 %}
                <li class="dropdown dropdown_main_menu">
                  <a href="{{ item.url }}"  class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">{{ item.title }} <span class="caret"></span></a>
                  {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                </li>
              {% else %}
                <li class="dropdown-submenu">
                  <a href="{{ item.url }}">{{ item.title }} <span class="caret"></span></a>
                  {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                </li>
              {% endif %}
            {% else %}
            
        {% set menutitle = item.title %}
        {% set newTitle=menutitle %}
				{% set link_text %}{{ newTitle|raw }}{% endset %}
        {% if menutitle=="Contact us1" %} 
        <li class="cont-page"> <a  data-target="#contact_page_form" data-toggle="modal" href="#"  >{{menutitle}}</a>
        {% else %} 
        <li {{ item.attributes }}>{{ link( link_text, item.url) }}
        {% endif %}
        </li>
				
            {% endif %}
          {% endfor %}
          </ul>
         {% if menu_level == 0 %}
          {% else %}
           </div></div></div>
          {% endif %}
         
        {% endif %}
      {% endmacro %}
